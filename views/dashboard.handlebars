<section>
  <h2>Create New Question</h2>

  <form class="new-question-form">
    <div>
      <label for="question-title">Title</label>
      <input type="text" id="question-title" name="question-title" />
    </div>
    <div>
      <label for="question-description">Question Description</label>
      <input id="question-description" name="question-description" />
    </div>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Questions</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit question</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-question.js"></script>